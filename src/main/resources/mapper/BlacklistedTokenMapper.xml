<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.library.mapper.BlacklistedTokenMapper">
	<!-- 차단된 토큰 목록 조회 : 관리자 -->
	<select id="getAllBlacklistedTokens" resultType="com.library.dto.BlacklistedToken">
		SELECT * FROM blacklisted_token
	</select>
	
	<!-- 차단된 토큰 조회 : 회원 로그인 or 브라우저 접속 시 -->
	<select id="getBlacklistedTokenByToken" resultType="com.library.dto.BlacklistedToken" parameterType="String">
		SELECT * FROM blacklisted_token WHERE token = #{token}
	</select>

	<!-- 차단된 토큰 추가 : 회원 탈퇴 시 -->
	<insert id="insertBlacklistedToken" parameterType="com.library.dto.BlacklistedToken">
		<selectKey keyProperty="blacklistedTokenId" resultType="java.lang.Integer" order="BEFORE">
		    SELECT sq_blacklisted_token.nextval FROM DUAL
		</selectKey>
		INSERT INTO blacklisted_token (blacklisted_token_id, type, token, expires_date) 
		VALUES (#{blacklistedTokenId}, #{type}, #{token}, #{expiresDate})
	</insert>
	
	<!-- 만료된 토큰 수동 삭제 : 관리자 -->
	<delete id="deleteBlacklistedToken" parameterType="int">
		DELETE FROM blacklisted_token WHERE blacklisted_token_id = #{blacklistedTokenId}
	</delete>
	
</mapper>